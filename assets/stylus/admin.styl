@import 'nib'

fade()
	transition-property: opacity
	transition-duration: .5s
	transition-timing-function: ease

body
	background-color:#eee

.is-logged-in
	.hidden-logged-in
		display:none!important

.is-logged-out
	.hidden-logged-out
		display:none!important

#ajax-status
	position:fixed
	right:0px
	bottom:0px

.admin-scope
	.hidden
		display:none

	.light
		color:#eee

	.lookup-results
		list-style:none
		margin:0
		padding:0
		margin-top:-1px
		margin-left:4px
		display:none
		position: absolute;
		width: 90%;
		z-index: 999;
		background-color: #ccc;
		border-top: thin solid #ccc;
		border-color: #66afe9
		outline: 0
		box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(102, 175, 233, 0.6)

		li
			list-style:none
			margin:0
			padding:0
			display:block
			padding:10px
			border-bottom: thin solid #999
			border-left: thin solid #999
			border-right: thin solid #999
			cursor:pointer
			&:hover
				background-color:#eee

	#admin-content
		margin-top:70px
		margin-bottom:100px

	i.fa-2x
		margin-right:15px
		vertical-align: middle
		cursor:pointer

	.pull-right
		i.fa-2x
			margin-right:0px
			margin-left:15px

	.table-hover
		tr
			cursor:pointer

	.input-margins
		padding:7px

	.upload-viewport
		position:relative
		height:300px
		img
			transition: all 0.5s ease;
		.dropzone
			position:absolute
			top:0px!important
			width:100%
			height:300px
			opacity: 0
			transition: all 0.5s ease;
			paddding-top:40%
		.dropzone:hover
			opacity: 0.8
		.loading
			opacity: 1

.position-relative
		position:relative

input[type="text"],input[type="date"],input[type="time"],input[type="number"], input[type="password"], input[type="tel"], select, textarea
	padding-right:30px
	opacity:.5
	fade()

	&:focus
		opacity:1
		background-position: 0 0

textarea
	min-height:200px

.input-ok-indicator
	opacity:0
	position:absolute
	right:25px
	top:7px
	color: #999
	fade()

.input-ok
	input[type="text"],input[type="date"],input[type="time"],input[type="number"],input[type="password"], input[type="tel"], select, textarea
		opacity: 1
		fade()
	.input-ok-indicator
		opacity:1
		fade()

.validation-help
	opacity:0
	padding-left:5px
	height:18px
	color: red

.input-error
	&.touched
		.validation-help
			opacity:1

.input-with-icon
	padding-left:25px!important

.input-icon
	position:absolute
	top: 3px
	left: 0px

.cc-brand
	position:absolute
	top:6px
	right:45px
	img
		height:20px

.btn
	&.disabled
		opacity: 0.5
		pointer-events: none
	&[disabled]
		opacity: 0.5
		pointer-events: none

.parent-relation
	i
		margin-left:15px

.pagination-container
	overflow:auto;
	.pagination
		margin:0px

.toggle-admin
	display:inline-block
	margin-right: 10px
	cursor:pointer

	&:hover
		color: red
